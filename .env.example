# ===========================================
# REQUIRED - MongoDB Connection
# ===========================================
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/database-name?retryWrites=true&w=majority

# ===========================================
# REQUIRED - App Configuration
# ===========================================
NEXT_PUBLIC_APP_URL=https://your-domain.vercel.app
NEXT_PUBLIC_HOTLINE=0989760000

# ===========================================
# REQUIRED - NextAuth Security
# ===========================================
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET=your-minimum-32-character-random-secret-key-change-this
NEXTAUTH_URL=https://your-domain.vercel.app

# ===========================================
# REQUIRED - Cron Job Security
# ===========================================
# Used to protect the /api/bookings/cleanup endpoint
CRON_SECRET=your-secure-cron-secret-key-change-this

# ===========================================
# REQUIRED - Payment Gateway (Pay2S)
# ===========================================
# Get credentials from: https://my.pay2s.vn/payment-intergration-center
PAY2S_PARTNER_CODE=your_partner_code
PAY2S_ACCESS_KEY=your_access_key
PAY2S_SECRET_KEY=your_secret_key
PAY2S_API_URL=https://payment.pay2s.vn/v1/gateway/api
PAY2S_WEBHOOK_SECRET=your_webhook_secret

# Bank Information for QR Code generation
PAY2S_BANK_CODE=ACB
PAY2S_ACCOUNT_NUMBER=your_account_number
PAY2S_ACCOUNT_NAME=YOUR ACCOUNT NAME

# Payment Callback URLs (Update with your production domain)
PAY2S_REDIRECT_URL=https://your-domain.vercel.app/payment/success
PAY2S_IPN_URL=https://your-domain.vercel.app/api/payment/pay2s/ipn

# ===========================================
# OPTIONAL - Sandbox Testing
# ===========================================
# Uncomment for testing environment
# PAY2S_API_URL=https://sandbox-payment.pay2s.vn/v1/gateway/api
